    "/pets": {
      "get": {
        "description": "provides the details of all pets",
        "tags": [
          "Pet"
        ],
        "operationId": "ListPets",
        "parameters": [
          {
            "type": "string",
            "x-go-name": "Category",
            "description": "pet category to filter",
            "name": "category",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/ListPetsResponse"
          },
          "500": {
            "$ref": "#/responses/ErrorResponse"
          }
        }
      },
      "post": {
        "description": "add a new pet detail",
        "tags": [
          "Pet"
        ],
        "operationId": "AddPet",
        "parameters": [
          {
            "x-go-name": "Body",
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Pet"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/SuccessRespWithoutData"
          },
          "500": {
            "$ref": "#/responses/ErrorResponse"
          }
        }
      }
    },
    "/pets/{id}": {
      "get": {
        "description": "provides the detail of the pet with the given id",
        "tags": [
          "Pet"
        ],
        "operationId": "GetPet",
        "parameters": [
          {
            "type": "integer",
            "format": "int64",
            "x-go-name": "ID",
            "description": "The id of the pet",
            "name": "id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/GetPetResponse"
          },
          "400": {
            "$ref": "#/responses/ErrorResponse"
          },
          "500": {
            "$ref": "#/responses/ErrorResponse"
          }
        }
      },
      "delete": {
        "description": "delete the pet detail with given id",
        "tags": [
          "Pet"
        ],
        "operationId": "DeletePet",
        "parameters": [
          {
            "type": "integer",
            "format": "int64",
